.box
  %h1 Create a new quiz

  = form_tag action: 'create', remote: true do |f|
    .form-group
      = label_tag :name
      = text_field_tag :name, nil, class: 'form-control code'

    .fields
      #questions_choices
        = render partial: 'form'
        -#= render partial: 'form'
        -#= render partial: 'form'
        -#= render partial: 'form'
      %a{id:'addNewQuestion'}Add New Question
      = submit_tag 'Create', id: 'create', class: 'btn btn-primary'

:javascript
  this.removeChoice = function(element) {
    return element.parent().remove();
  };

  $("#addNewQuestion").on("click", function() {
    return $('#questions_choices').append($('#new_question_form').html("#{j render partial: 'form'}"));
  });